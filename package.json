{
    "name": "node",
    "packageManager": "yarn@4.5.0",
    "type": "module",
    "devDependencies": {
        "@tsconfig/node20": "^20.1.4",
        "@types/csurf": "^1",
        "@types/dompurify": "^3",
        "@types/express": "^5.0.0",
        "@types/node": "^22.7.6",
        "drizzle-kit": "^0.26.2",
        "eslint": "^9.12.0",
        "prettier": "3.3.3",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.10.0"
    },
    "scripts": {
        "c": "yarn tsc",
        "start": "node dist/src/",
        "all": "yarn c && yarn start",
        "static": "yarn eslint src",
        "stylecheck": "prettier --check 'src/**/*.{js,jsx,ts,tsx,css,scss,json}'",
        "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,scss,json}'",
        "clear": "rm -rf dist",
        "auto": "concurrently \"yarn tsc --watch\" \"nodemon dist/index.js\"",
        "dev": "nodemon --watch src --ext ts --exec 'yarn all'"
    },
    "dependencies": {
        "concurrently": "^9.0.1",
        "connect": "^3.7.0",
        "csurf": "^1.11.0",
        "dompurify": "^3.1.7",
        "dotenv": "^16.4.5",
        "drizzle-orm": "^0.35.2",
        "drizzle-zod": "^0.5.1",
        "express": "^4.21.1",
        "helmet": "^8.0.0",
        "mysql2": "^3.11.3",
        "nodemon": "^3.1.7",
        "promise": "^8.3.0",
        "xss": "^1.0.15",
        "zod": "^3.23.8",
        "zod-validation-error": "^3.4.0"
    }
}
